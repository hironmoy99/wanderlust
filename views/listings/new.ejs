<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <!-- <br><br> -->
<h3>Create a new listing</h3>
<form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-3">
        <lavel for="title" class="form-lavel">Title</lavel>
    <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
    <div class="valid-feedback">Title looks good!</div>
    </div>
    <div class="mb-3">
        <lavel for="description" class="form-lavel">Description</lavel>
        <textarea name="listing[description]" class="form-control" required></textarea>
        <div class="invalid-feedback"> Description should be valid</div>
    </div>
    <div class="mb-3">
        <lavel for="image" class="form-lavel">Upload Listing Image</lavel>
        <input name="listing[image]" type="file" class="form-control">
        required
    </div>
    <div class="row">
    <div class="mb-3 col-md-4">
        <lavel for="price" class="form-lavel">Price</lavel>
        <input name="listing[price]" placeholder="1200"  class="form-control" required>
        <div class="invalid-feedback"> Price should be valid</div>
    </div>
    <div class="mb-3 col-md-8">
        <lavel for="country" class="form-lavel">Country</lavel>
        <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
        <div class="invalid-feedback"> country name should be valid</div>
    </div>
    </div>
    <div class="mb-3">
        <lavel for="location" class="form-lavel">Location</lavel>
        <input name="listing[location]" placeholder="Bardhaman,West Bengal" type="text" class="form-control">
        <div class="invalid-feedback">Location should be valid</div>
    </div>
    <button class="btn btn-dark add-btn mt-3">Add</button>
</form>
</div>
</div>